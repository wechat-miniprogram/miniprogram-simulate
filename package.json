{
  "name": "miniprogram-simulate",
  "version": "1.0.0",
  "description": "tools for miniprogram custom component unit test",
  "main": "index.js",
  "scripts": {
    "build": "webpack",
    "karma": "npm run build && karma start",
    "test": "jest ./test/**/*.test.js --silent --bail",
    "coverage": "jest ./test/**/*.test.js --coverage --bail",
    "codecov": "jest ./test/***/*.test.js --coverage && codecov",
    "lint": "eslint \"src/**/*.js\" --fix"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testURL": "https://jest.test",
    "collectCoverageFrom": [
      "src/*.js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  },
  "keywords": [
    "miniprogram",
    "custom component",
    "unit test"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wechat-miniprogram/miniprogram-simulate.git"
  },
  "author": "wechat-miniprogram",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.2.0",
    "codecov": "^3.2.0",
    "eslint": "^5.13.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "jest": "^23.6.0",
    "karma": "^3.1.4",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-dirname-preprocessor": "0.0.4",
    "karma-filemap-preprocessor": "0.0.2",
    "karma-mocha": "^1.3.0",
    "karma-webpack": "^3.0.5",
    "mocha": "^5.2.0",
    "webpack": "^4.29.3",
    "webpack-cli": "^3.2.3"
  },
  "dependencies": {
    "csso": "^3.5.1",
    "j-component": "latest",
    "less": "^3.9.0",
    "miniprogram-compiler": "0.0.1",
    "postcss": "^7.0.14"
  }
}
