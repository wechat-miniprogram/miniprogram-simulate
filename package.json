{
  "name": "miniprogram-simulate",
  "version": "1.5.8",
  "description": "tools for miniprogram custom component unit test",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "dev": "webpack --watch",
    "build": "webpack",
    "karma": "npm run build && karma start",
    "test": "jest --bail",
    "coverage": "jest --coverage --bail",
    "codecov": "jest --coverage && codecov",
    "lint": "eslint \"src/**/*.js\" --fix && eslint \"test/**/*.js\" --fix"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testURL": "https://jest.test",
    "testMatch": [
      "**/test/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/*.js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  },
  "keywords": [
    "miniprogram",
    "custom component",
    "unit test"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/wechat-miniprogram/miniprogram-simulate.git"
  },
  "author": "wechat-miniprogram",
  "license": "MIT",
  "devDependencies": {
    "chai": "^4.2.0",
    "codecov": "^3.7.0",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^7.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "jest": "^26.0.1",
    "karma": "^6.3.20",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^3.1.1",
    "karma-dirname-preprocessor": "latest",
    "karma-filemap-preprocessor": "latest",
    "karma-mocha": "^2.0.1",
    "karma-webpack": "^4.0.2",
    "mocha": "^10.0.0",
    "pretty-format": "^26.0.1",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10"
  },
  "dependencies": {
    "csso": "^3.5.1",
    "j-component": "^1.4.7",
    "less": "^3.10.3",
    "miniprogram-compiler": "latest",
    "postcss": "^7.0.23"
  }
}
